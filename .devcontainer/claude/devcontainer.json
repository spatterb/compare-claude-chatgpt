{
  "name": "Ubuntu Claude",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",

  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12.10"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylint",
        "ms-python.vscode-pylance",
        "ms-vscode.vscode-json",
        "ms-python.black-formatter",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "onCreateCommand": "./touch onCreateCommand.txt",

  // Runs once after the container is started
  "postCreateCommand": "./touch postCreateCommand.txt",

  // Optional: forward ports for debugging web apps
  "forwardPorts": [8000],

  // Set non-root user
  "remoteUser": "vscode",

  // Optional: mount source as workspace
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}"
}
